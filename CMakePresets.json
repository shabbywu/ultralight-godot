{
	"version": 5,
	"configurePresets": [
		{
			"name": "default",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/"
			},
			"environment": {
				"VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/.vcpkg/triplets"
			},
			"condition": {
				"type": "notEquals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "linux-x64-debug",
			"inherits": "default",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "linux-x64-release",
			"inherits": "default",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "windows-x64-debug",
			"inherits": "default",
			"architecture": "x64",
			"generator": "Visual Studio 17 2022",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "windows-x64-release",
			"inherits": "default",
